<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commission_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hunabsys.gamezone.views.fragments.CommissionFragment">

    <TextView
        android:id="@+id/commission_text_label"
        style="@style/TitleFormTextLabel"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="@string/default_item" />

    <LinearLayout
        android:id="@+id/commission_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <faranjit.currency.edittext.CurrencyEditText
            android:id="@+id/commission_edit_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/selector_field_background"
            android:ems="10"
            android:enabled="false"
            android:gravity="center_vertical"
            android:hint="@string/default_currency"
            android:inputType="number"
            android:maxLength="13"
            android:textColor="@drawable/selector_field_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:showSymbol="true" />

        <ImageButton
            android:id="@+id/commission_button_calculator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_button_round_primary_red"
            android:src="@mipmap/ic_calculator_white"
            tools:ignore="ContentDescription" />

    </LinearLayout>
</LinearLayout>
