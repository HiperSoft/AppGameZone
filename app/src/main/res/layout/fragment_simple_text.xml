<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_text_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hunabsys.gamezone.views.fragments.SimpleTextFragment">

    <TextView
        android:id="@+id/simple_text_label"
        style="@style/TitleFormTextLabel"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="@string/default_item" />

    <EditText
        android:id="@+id/simple_text_edit_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/selector_field_background"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="text"
        android:maxLength="100"
        android:textColor="@drawable/selector_field_text_color"
        android:textSize="20sp" />

</LinearLayout>